{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "strict": true,
        "target": "es5",
        "jsx": "react",
        "lib": [
            "dom",
            "ES2017",
        ],
        "downlevelIteration": true,
        "noImplicitAny": false
    },
    "include": [
        "src"
    ],
    "compileOnSave": false
}