<vbox width="70%" padding="20" verticalAlign="center" horizontalAlign="center" style="background-color: white;border:1px solid grey;">
    <hbox id="box_peopleList" width="100%" height="150"></hbox>
    <hbox id="box_strategyList" width="100%" height="150"></hbox>
    <hbox horizontalAlign="center">
        <property-grid width="400">
            <property-group text="武將">
                <property id="pro_name" label="武將" value="100" />
                <property id="pro_energy" label="體力" value="100" />
                <property id="pro_intelligence" label="智力" value="1000" />
                <property id="pro_ability" label="專長加成" value="" />
            </property-group>
        </property-grid>
        <frame text="指定玩家">
            <dropdown id="drp_player" text="玩家">
                <data>
                    <item text="指定玩家" />
                </data>
            </dropdown>
        </frame>
        <frame text="指定武將" >
            <dropdown id="drp_people" text="武將">
                <data>
                    <item text="指定武將" />
                </data>
            </dropdown>
        </frame>
        <frame text="指定格子" >
            <dropdown id="drp_grid" text="格子">
                <data>
                    <item text="指定格子" />
                </data>
            </dropdown>
        </frame>
    </hbox>
    <hbox horizontalAlign="center">
        <label text="計策:"  style="font-size:14" />
        <label id="lbl_usingStrategy" text="" style="font-size:24" />
        <label text="成功率:"  style="font-size:14" />
        <label id="lbl_rate" text="" style="font-size:24" />
    </hbox>
    <hbox horizontalAlign="center">
        <button text="取消" id="btn_cancel" />
        <button text="確定" id="btn_confirm" />
    </hbox>
</vbox>