<vbox width="70%" padding="20" verticalAlign="center" horizontalAlign="center" style="background-color: white;border:1px solid grey;">
    <hbox id="box_buildingList" width="100%" height="150"></hbox>
    <hbox id="box_grid" width="300">
        <tableview id="tab_buildingList" width="100%" height="100%" contentWidth="100%" style="font-size:12;">
            <header width="100%">
                <column id="name" text="名稱" width="200" sortable="true" style="text-align:center;font-size:12;"/>
                <column id="money" text="金錢" width="60" sortable="true" style="text-align:center;font-size:12;"/>
                <column id="describe" text="作用" width="100%" sortable="true" style="text-align:center;font-size:12;"/>
            </header>

            <item-renderer verticalAlign="center">
                <label id="name" textAlign="center" width="100%" />
            </item-renderer>

            <data>

            </data>
        </tableview>
    </hbox>
    <hbox id="box_gridView" width="400" />
    <hbox horizontalAlign="center">
        <button text="取消" id="btn_cancel" />
        <button text="確定" id="btn_confirm" />
    </hbox>
</vbox>