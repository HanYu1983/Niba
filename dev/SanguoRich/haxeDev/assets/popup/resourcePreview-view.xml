<vbox width="70%" padding="20" verticalAlign="center" horizontalAlign="center" style="background-color: white;border:1px solid grey;">
    <hbox horizontalAlign="center">
        <label text="資源買賣"/>
    </hbox>
    <hbox id="box_peopleList1" width="100%" height="150"></hbox>
    <hbox horizontalAlign="center" width="100%" >
        <box id="box_gridView" width="50%"/>
        <property-grid id="pg_playerInfo" width="50%">
            <property-group text="君主資料">
                <property id="pro_name" label="執行武將" value="100" />
                <property id="pro_energy" label="體力" value="100" />
                <property id="pro_intelligence" label="智力(糧草)" value="1000" />
                <property id="pro_political" label="政治(金錢)" value="1000" />
                <property id="pro_charm" label="魅力(士兵)" value="1000" />
                <property id="pro_money" label="金錢" value="1000" />
                <property id="pro_food" label="糧草" value="1000" />
                <property id="pro_army" label="士兵" value="1000" />
                <property id="pro_maintainFood" label="糧草消耗" value="1000" />
                <property id="pro_ability" label="專長加成" value="" />
            </property-group>
        </property-grid>
    </hbox>
    <hbox horizontalAlign="center">
        <label text='交易基礎量'/>
        <button-bar id="grp_moneyBase" allowUnselection="true">
            <button text="100" />
            <button text="200" />
            <button text="400" />
        </button-bar>
    </hbox>
    <hbox horizontalAlign="center">
        <button text="取消" id="btn_cancel" />
        <button text="確定" id="btn_confirm" />
    </hbox>
</vbox>