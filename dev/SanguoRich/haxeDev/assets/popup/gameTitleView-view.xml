<vbox padding="20" verticalAlign="center" horizontalAlign="center" style="background-color: white;border:1px solid grey;">
    <style>
    .button {
        width:60
    }
    </style>
    <hbox>
        <frame text="玩家設定">
            <vbox horizontalAlign="center" verticalAlign="center">
                <hbox>
                    <label text='劉備'/>
                    <button-bar id="grp_p0" allowUnselection="true">
                        <button text="玩家" />
                        <button text="電腦" />
                        <button text="關閉" />
                    </button-bar>
                </hbox>
                <hbox>
                    <label text='曹操'/>
                    <button-bar id="grp_p1" allowUnselection="true">
                        <button text="玩家" />
                        <button text="電腦" />
                        <button text="關閉" />
                    </button-bar>
                </hbox>
                <hbox>
                    <label text='孫權'/>
                    <button-bar id="grp_p2" allowUnselection="true">
                        <button text="玩家" />
                        <button text="電腦" />
                        <button text="關閉" />
                    </button-bar>
                </hbox>
                <hbox>
                    <label text='董卓'/>
                    <button-bar id="grp_p3" allowUnselection="true">
                        <button text="玩家" />
                        <button text="電腦" />
                        <button text="關閉" />
                    </button-bar>
                </hbox>

            </vbox>
        </frame>
        <frame text="環境設定">
            <vbox>
                <hbox>
                    <label text='格子數量'/>
                    <button-bar id="grp_gridCount" allowUnselection="true">
                        <button text="10" />
                        <button text="20" />
                        <button text="30" />
                    </button-bar>
                </hbox>
                <hbox>
                    <label text='初始資源'/>
                    <button-bar id="grp_resource" allowUnselection="true">
                        <button text="400" />
                        <button text="800" />
                        <button text="1200" />
                    </button-bar>
                </hbox>
                <hbox>
                    <label text='成長速度'/>
                    <button-bar id="grp_growSpeed" allowUnselection="true">
                        <button text="低" />
                        <button text="中" />
                        <button text="高" />
                    </button-bar>
                </hbox>
            </vbox>
        </frame>
    </hbox>

    <hbox horizontalAlign="center">
        <button id="btn_start" text="遊戲開始"/>
        <!-- <button text="記錄" width="100%" id="btn_save" />
        <button text="讀取" width="100%" id="btn_load" /> -->
    </hbox>
</vbox>