<box width="80" height="80" style="background-color: gray;border:1px solid gray;background-opacity: .3">
    <style>
    .resource_bar {
        background-color: gray;
        background-opacity: .3;
        padding:0;
        width:33.3%;
    }
    .strategy_view {
        background-color: gray;
        background-opacity: 1.0;
        padding:0;
        width:25%;
        height:100%;
    }
    </style>

    <box width="80" height="100%">
        <box id="box_maxMoney" styleName="resource_bar" style="background-color: white;"/>
        <box id="box_maxFood" horizontalAlign="center" styleName="resource_bar" style="background-color: white;"/>
        <box id="box_maxArmy" horizontalAlign="right" styleName="resource_bar" style="background-color: white;"/>
    </box>

    <box width="80" height="100%">
        <box id="box_money" styleName="resource_bar" style="background-color: yellow;"/>
        <box id="box_food" horizontalAlign="center" styleName="resource_bar" style="background-color: green;"/>
        <box id="box_army" horizontalAlign="right" styleName="resource_bar" style="background-color: gray;"/>
    </box>
    <label id="lbl_name" text="" textAlign="center" width="100%"/>

    <hbox width="50%" height="10%" verticalAlign="bottom">
        <box id="box_s0" styleName="strategy_view" style="background-color: #FF0000;"/>
        <box id="box_s1" styleName="strategy_view" style="background-color: #00FF00;"/>
        <box id="box_s2" styleName="strategy_view" style="background-color: #0000FF;"/>
        <box id="box_s3" styleName="strategy_view" style="background-color: #FFFF00;"/>
    </hbox>
    
    <box id="box_build" width="18" height="18" verticalAlign="bottom" horizontalAlign="right" style="background-color: #FF6666;border:1px solid red;background-opacity: 1">
        <label id="lbl_building" text="" textAlign="center" width="100%" height="100%" style="color: black; font-size:12px;"/>
    </box>
    <box id="box_land" width="18" height="18" verticalAlign="top" horizontalAlign="right" style="background-color: #6666FF;border:1px solid red;background-opacity: 1">
        <label id="lbl_type" text="" textAlign="center" width="100%" height="100%" style="color: black; font-size:12px;"/>
    </box>
    <box verticalAlign="center" horizontalAlign="center" >
        <label id="lbl_favor" text=""/>
    </box>
    
    <box id='box_playerCover' width='100%' height='100%' style="background-color: white;border:1px solid gray;background-opacity: .3"/>

    <box id='box_showAnimation' width='100%' height='100%' style="background-color: white;border:1px solid gray;background-opacity: .7">
        <box verticalAlign="center" horizontalAlign="center" >
            <label id="lbl_action" text=""/>
        </box>
    </box>

    <box id='box_chanceCover' width='100%' height='100%' style="background-color: yellow;border:1px solid gray;background-opacity: 1.0">
        <box verticalAlign="center" horizontalAlign="center" >
            <label text="機會" style="font-size:24; "/>
        </box>
    </box>

    <box id='box_destinyCover' width='100%' height='100%' style="background-color: purple;border:1px solid gray;background-opacity: 1.0">
        <box verticalAlign="center" horizontalAlign="center" >
            <label text="命運" style="font-size:24; "/>
        </box>
    </box>
</box>