<box width="100%" height="100%">
    <style>
        .button {
            font-size: 14px;
        }
    </style>
    <!-- <menubar width="100%">
        <menu text="系統">
            <menuitem text="儲存" />
            <menuitem text="讀取" />
        </menu>
    </menubar> -->
    <hbox width="1280" height="900" horizontalAlign="center" verticalAlign="center" padding="20">
        <vbox width="100%" height="100%">
            <label id="lbl_gameInfo" text="測試" style="font-size:14"/>
            <hbox width="100%" height="240">
                <box id="stage" width="800" height="100%" style="background-color: white;border:1px solid grey;background-opacity: .3">
                    <box id="box_grids" width="100%" height="100%" />
                    <box id="box_players" width="100%" height="100%" />
                    <box id="box_stageFront" width="100%" height="100%">
                        <box id="box_cursor" width="80" height="80" style="background-color: blue;border:1px solid black;background-opacity: .2"></box>
                    </box>
                </box>
                <vbox width="100%" height="100%">
                    <tabbar id="tab_whichInfo" width="100%">
                        <button id="btn_totalInfo" text="總資產" icon="haxeui-core/styles/default/haxeui_tiny.png" />
                        <button id="btn_onlyPlayerInfo" text="自身" icon="haxeui-core/styles/default/haxeui_tiny.png" />
                        <button id="btn_onlyGridInfo" text="城池" icon="haxeui-core/styles/default/haxeui_tiny.png" />
                    </tabbar>
                    <tableview id="tab_allPlayers" width="100%" height="100%">
                        <header width="100%">
                            <column id="name" text="名" width="100%" />
                            <column id="money" text="金" width="100" />
                            <column id="food" text="糧" width="100" />
                            <column id="army" text="兵" width="100" />
                            <column id="cityCount" text="城" width="30" />
                            <column id="peopleCount" text="將" width="30" />
                        </header>
                        <data>
                        </data>
                    </tableview>
                </vbox>
            </hbox>
            <hbox width="100%">
                <vbox width="100%">
                    <hbox width="100%">
                        <hbox id="box_playerView" width="300" />
                        <hbox id="box_playerPeopleList" width="100%" height="100%" />
                    </hbox>
                    <hbox width="100%">
                        <hbox id="box_gridView" width="300" />
                        <hbox id="box_gridPeopleList" width="100%" height="100%" />
                    </hbox>
                </vbox>
                <vbox width="120" height="100%">
                    <vbox width="100%">
                        <button text="游戲開始" width="100%" id="btn_start" />
                    </vbox>
                    <frame id="box_basicCmds" width="100%" text="基本指令">
                        <vbox width="100%">
                            <button text="移動" width="100%" id="btn_go" />
                            <button text="計略" width="100%" id="btn_showStrategy" />
                            <button text="解雇" width="100%" id="btn_firePeople" />

                            <button text="交涉" width="100%" id="btn_negotiate" />
                            <button text="搶奪" width="100%" id="btn_snatch" />
                            <button text="攻城" width="100%" id="btn_occupation" />

                            <button text="札營" width="100%" id="btn_camp" />
                            <button text="練兵" width="100%" id="btn_practice" />
                            <button text="探索" width="100%" id="btn_explore" />
                            <button text="聘用" width="100%" id="btn_hire" />

                            <button text="經商" width="100%" id="btn_earnMoney" />
                            <button text="買糧" width="100%" id="btn_buyFood" />
                            <button text="賣糧" width="100%" id="btn_sellFood" />
                            <button text="徵兵" width="100%" id="btn_buyArmy" />
                            <button text="裁兵" width="100%" id="btn_sellArmy" />

                            <button text="調度" width="100%" id="btn_transfer" />
                            <button text="擴建" width="100%" id="btn_build" />

                            <button text="結束" width="100%" id="btn_end" />
                        </vbox>
                    </frame>
                    <frame id="box_system" width="100%" text="系統指令">
                        <vbox width="100%">
                            <button text="記錄" width="100%" id="btn_save" />
                            <button text="讀取" width="100%" id="btn_load" />
                        </vbox>
                    </frame>
                </vbox>
                
            </hbox>
        </vbox>
    </hbox>
    <box id="box_popup" width="100%" height="100%" style="background-color: grey;border:1px solid grey;background-opacity: .3">
        <!-- by script -->
    </box>
</box>